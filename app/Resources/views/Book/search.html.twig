{% extends 'base.html.twig' %}
{% block stylesheets %}

  {{ parent() }} {#use parent for include the parent content on the block#}


{% endblock %}

{% block title %}Book Store! - Search{% endblock %}

{% block body %}

<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h3>Search</h3>
      <hr>
    </div>
  </div>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-4">
          <form method="post" action="{{ path('book_search') }}" class="form-inline">
              <div class="form-group">
                  <label for="titleBook">Name</label>
                  <input type="text" class="form-control" name="title" id="titleBook" placeholder="Enter Book Name....">
              </div>
              <button type="submit" class="btn btn-default">
                  <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
              </button>

          </form>
      </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
{% endblock %}